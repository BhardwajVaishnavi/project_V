{
  "name": "medical-patient-management",
  "version": "1.0.0",
  "description": "Unified Medical Patient Management System - Full Stack Application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server.js",
    "client:dev": "cd client && npm start",
    "build": "npx prisma generate",
    "build:client": "cd client && npm run build",
    "install:all": "npm install && cd client && npm install",
    "test": "cd client && npm test",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:studio": "npx prisma studio",
    "db:reset": "npx prisma db push --force-reset",
    "lint": "cd client && npm run lint",
    "clean": "rm -rf node_modules client/node_modules",
    "clean:install": "npm run clean && npm run install:all",
    "heroku-postbuild": "npm run install:all && npm run build",
    "vercel-build": "npx prisma generate"
  },
  "keywords": [
    "medical",
    "patient-management",
    "healthcare",
    "react",
    "nodejs",
    "postgresql",
    "fullstack"
  ],
  "author": "Medical Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "@prisma/client": "^5.6.0",
    "prisma": "^5.6.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  }
}
