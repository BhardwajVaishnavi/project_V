{
  "name": "medical-backend",
  "version": "1.0.0",
  "description": "Backend API for medical patient management system",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm install",
    "postinstall": "npx prisma generate",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:studio": "npx prisma studio",
    "db:reset": "npx prisma db push --force-reset",
    "vercel-build": "npm install && npx prisma generate"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "aws-sdk": "^2.1490.0",
    "@prisma/client": "^5.6.0",
    "prisma": "^5.6.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "nodemailer": "^6.9.7",
    "sharp": "^0.32.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "@types/node": "^20.8.10"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}